{
    "env": {
        "node": true,
        "browser": true,
        "es2021": true
    },
    "extends": ["standard-with-typescript", "plugin:astro/recommended"],
    "overrides": [
        {
            "files": ["*.astro"],
            "parser": "astro-eslint-parser",
            "parserOptions": {
                "parser": "@typescript-eslint/parser",
                "extraFileExtensions": [".astro"]
            },
            "rules": {
                "indent": ["error", 4]
            }
        },
        {
            "files": ["**/*.astro/*.js", "*.astro/*.js"],
            "parser": "@typescript-eslint/parser",
            "rules": {
                "indent": ["error", 4]
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4]
    }
}
